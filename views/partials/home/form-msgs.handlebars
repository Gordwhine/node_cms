{{#if error}}
	<div class="row">
		<div class="col-md-12">
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				{{error}}
			</div>
		</div>
	</div>
{{/if}}

{{#if error_message}}
	<div class="row">
		<div class="col-md-12">
			<div class="alert alert-warning alert-dismissible fade show" role="alert">
				{{error_message}}
			</div>
		</div>
	</div>
{{/if}}

{{#if success_message}}
	<div class="row">
		<div class="col-md-12">
			<div class="alert alert-success alert-dismissible fade show" role="alert">
				{{success_message}}
			</div>
		</div>
	</div>
{{/if}}