
<div class="col-sm-4">
	<h1>Create Category</h1>
	<form action="/admin/categories/create" method="post">
		<div class="form-group">
		<label for="name">Name:</label>
			<input name="category" type="text" class="form-control" placeholder="Enter title">
		</div>
		<button class="btn btn-primary">Create Category</button>
	</form><br><br/>
</div>
<hr>
	
<div class="col-sm-8">
  <h2>Categories</h2>     
  {{> home/form-msgs}}      
  <table class="table table-bordered">
    <thead>
	    <tr>
	        <th>Name</th>
	    </tr>
    </thead>
    <tbody>
    	{{#each categories}}
	    <tr>
	        <td>{{name}}</td>
	        <td>
	        	<a href="/admin/categories/edit/{{id}}" class="btn btn-info">Edit</a>
	        </td>
	        <td>
				<form action="/admin/categories/{{id}}?_method=DELETE" method="post">
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</td>
	    </tr>
	    {{/each}}
    </tbody>
  </table>
</div>