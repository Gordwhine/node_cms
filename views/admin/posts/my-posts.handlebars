<h1>My Posts</h1>

{{> home/form-msgs}}

<table class="table table-bordered">
	<thead>
		<tr>
			<th>Photo</th>
			<th>Title</th>
			<th>Status</th>
			<th>Category</th>
			<th>Allow Comments</th>
			<th>Date</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		{{#each posts}}
		<tr>
			<td><img src="/uploads/{{file}}" alt="" height="50px" width="70px"></td>
			<td>{{title}}</td>
			<td>{{status}}</td>
			<td>{{category.name}}</td>
			<td>{{allowComments}}</td>
			<td>{{generateDate date 'MMMM Do YYYY'}}</td>
			<td><a href="/post/{{slug}}">View Post</a></td>
			<td>
				<a href="/admin/posts/edit/{{id}}" class="btn btn-info">Edit</a>
			</td>
			<td>
				<form action="/admin/posts/{{id}}?_method=DELETE" method="post">
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</td>
		</tr>
		{{/each}}
	</tbody>
</table>