<h1>Create Post</h1>
{{#each errors}}
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<div class="alert alert-danger alert-dismissible fade show" role="alert">
				{{message}}
			</div>
		</div>
	</div>
{{/each}}
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<form action="/admin/posts/store" method="post" enctype="multipart/form-data">
			<div class="form-group">
			    <label for="title">Title</label>
			    <input type="text" name="title" class="form-control" id="title" placeholder="Enter title" required>
			</div>
			<div class="form-group">
			    <label for="file">File Upload</label>
			    <input type="file" name="file">
			</div>
			<div class="form-group">
				<label for="category">Category</label>
				<select name="category" id="category" class="form-control">
					{{#each categories}}
						<option value="{{id}}">{{name}}</option>
					{{/each}}
				</select>
			</div>
			<div class="form-group">
				<label for="title">Status</label>
				<select name="status" id="status" class="form-control">
					<option value="public">Public</option>
					<option value="private">Private</option>
					<option value="draft">Draft</option>
				</select>
			</div>
			<div class="form-group form-check">
			    <label class="form-check-label">
			    	<input name="allowComments" class="form-check-input" type="checkbox"> Allow Comments
			    </label>
			</div>
			<div class="form-group">
			    <label for="body">Description</label>
			    <textarea name="description" type="text" row="5" col="5" class="form-control" id="body" placeholder="Enter text" required></textarea>
			</div>
			  <button type="submit" class="btn btn-primary">Create Post</button>
		</form>
	</div>
</div>

	
